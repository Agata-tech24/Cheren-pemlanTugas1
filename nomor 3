import java.util.Scanner;

public class MainMobil {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        Mobil m1 = new Mobil();
        System.out.print("Masukkan kecepatan mobil 1: ");
        m1.setKecepatan(scanner.nextInt());
        scanner.nextLine(); 
        System.out.print("Masukkan manufaktur mobil 1: ");
        m1.setManufaktur(scanner.nextLine());
        System.out.print("Masukkan nomor plat mobil 1: ");
        m1.setNoPlat(scanner.nextLine());
        System.out.print("Masukkan warna mobil 1: ");
        m1.setWarna(scanner.nextLine());
        System.out.print("Masukkan waktu tempuh mobil 1 (jam): ");
        m1.setWaktu(scanner.nextDouble());
        m1.displayMessage();
        System.out.println("================");

        scanner.nextLine(); 
        Mobil m2 = new Mobil();
        System.out.print("Masukkan kecepatan mobil 2: ");
        m2.setKecepatan(scanner.nextInt());
        scanner.nextLine(); 
        System.out.print("Masukkan manufaktur mobil 2: ");
        m2.setManufaktur(scanner.nextLine());
        System.out.print("Masukkan nomor plat mobil 2: ");
        m2.setNoPlat(scanner.nextLine());
        System.out.print("Masukkan warna mobil 2: ");
        m2.setWarna(scanner.nextLine());
        System.out.print("Masukkan waktu tempuh mobil 2 (jam): ");
        m2.setWaktu(scanner.nextDouble());
        m2.displayMessage();
        System.out.println("================");

        scanner.nextLine(); 
        System.out.print("Mobil pada objek m1 diubah menjadi warna: ");
        m1.setWarna(scanner.nextLine());
        m1.displayMessage();
        
        scanner.close();
    }
}
